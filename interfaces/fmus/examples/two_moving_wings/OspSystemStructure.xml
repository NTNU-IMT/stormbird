<?xml version="1.0" encoding="utf-8" ?>
<OspSystemStructure xmlns="http://opensimulationplatform.com/MSMI/OSPSystemStructure" version="0.1">

    <StartTime>0.0</StartTime>
    <BaseStepSize>0.1</BaseStepSize>
    <Algorithm>fixedStep</Algorithm>

    <Simulators>
        <Simulator name="wing_sails" source="../../stormbird_lifting_line/StormbirdLiftingLine.fmu">
            <InitialValues>
                <InitialValue variable = "parameters_path"> <String value="stormbird_parameters.json"/> </InitialValue>

                <InitialValue variable = "motion_velocity_linear_x"> <Real value="4.0"/> </InitialValue>
                <InitialValue variable = "wind_velocity"> <Real value="6.0"/> </InitialValue>
                <InitialValue variable = "wind_direction_coming_from"> <Real value="90.0"/> </InitialValue>
            </InitialValues>
        </Simulator>

        <Simulator name="motion" source="../../utils/tabulated_motion/TabulatedMotion.fmu">
            <InitialValues>
                <InitialValue variable = "motion_file_path"> <String value="motion.csv"/> </InitialValue>
            </InitialValues>
        </Simulator>

    </Simulators>

    <Connections>
        <VariableConnection>
            <Variable simulator="motion" name="x_position"/>
            <Variable simulator="wing_sails" name="translation_x"/>
        </VariableConnection>

        <VariableConnection>
            <Variable simulator="motion" name="y_position"/>
            <Variable simulator="wing_sails" name="translation_y"/>
        </VariableConnection>

        <VariableConnection>
            <Variable simulator="motion" name="z_position"/>
            <Variable simulator="wing_sails" name="translation_z"/>
        </VariableConnection>

        <VariableConnection>
            <Variable simulator="motion" name="x_rotation"/>
            <Variable simulator="wing_sails" name="rotation_x"/>
        </VariableConnection>

        <VariableConnection>
            <Variable simulator="motion" name="y_rotation"/>
            <Variable simulator="wing_sails" name="rotation_y"/>
        </VariableConnection>

        <VariableConnection>
            <Variable simulator="motion" name="z_rotation"/>
            <Variable simulator="wing_sails" name="rotation_z"/>
        </VariableConnection>
    </Connections>

</OspSystemStructure>
